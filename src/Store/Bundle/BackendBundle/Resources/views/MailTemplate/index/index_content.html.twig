<div class="row">

    <div class="col-md-6">

        <div class="table-responsive">
            <table class="table mb30">
                <thead>
                <tr>
                    <th>#</th>
                    <th>邮件标题</th>
                    <th>是否发送</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>

                {% for mail in pagination if mail.removedAt == NULL %}
                <tr>
                    <td>#{{ mail.id }}</td>
                    <td>#{{ mail.mailTitle }}</td>
                    <td>{% if mail.isSent %} 已经发送 {% else %} 还未发送 {% endif %}</td>
                    <td></td>
                    <td class="table-action">
                        <a href="{{ url('prew_mail' , {'id':mail.id}) }}"><i class="fa fa-eye"></i></a>
                        <a href="{{ url('edit_mail' , {'id':mail.id}) }}"><i class="fa fa-pencil"></i></a>
                        <a href="{{ url('remove_mail' , {'id':mail.id}) }}" class="delete-row"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>

    </div>

    <div class="col-md-6">
        {{ form(form) }}
    </div>
</div>